import javax.swing.*;
import java.awt.*;


public class SimpleGUI3 {
public static void main(String[] args) {
JFrame frame1 = new JFrame("Employee Management System");
frame1.setSize(300, 300);

JButton btn1 = new JButton("Employee Management System");
frame1.getContentPane().add(btn1, BorderLayout.PAGE_START);

JPanel myPanel = new JPanel();
//myPanel.setLayout(new BoxLayout(myPanel, BoxLayout.X_AXIS));

//button 2
JButton btn2 = new JButton("Button 2");
myPanel.add(btn2);

//button 3
JButton btn3 = new JButton("Button 3");
myPanel.add(btn3);

//button 4
JButton btn4 = new JButton("Ang galing ni Cherry");
frame1.getContentPane().add(btn4, BorderLayout.PAGE_END);

frame1.getContentPane().add(myPanel);

frame1.setVisible(true);
}
}

// 1. create object
// 2. set attributes
// 3. add to content pane
// follows a flow layout by default
// flow layout is powerful in resizing
// JFrame
